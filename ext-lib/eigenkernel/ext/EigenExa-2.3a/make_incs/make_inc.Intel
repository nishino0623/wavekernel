# for intel compiler
FF             = mpif90 -fixed
FC             = mpif90 -fixed
#FF             = mpif90 -fixed -ftrapuv -CA -CU -fexceptions
#FC             = mpif90 -fixed -ftrapuv -CA -CU -fexceptions
CC             = mpicc
AR             = xiar
SMPFLAG        = -openmp
