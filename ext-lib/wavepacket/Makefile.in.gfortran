FC = mpif90

#FCFLAG = -O3 -g -Wall
FCFLAG_NO_WARN = -O3 -g
FCFLAG = -O0 -g -Wall -ffpe-trap=invalid,zero,overflow -fbounds-check -fcheck=all -fmax-errors=5
FCFLAG_DEBUG = -O0 -g -Wall -ffpe-trap=invalid,zero,overflow -fbounds-check -fcheck=all

SCALAPACK = -lscalapack
LAPACK = -llapack
BLAS = -lblas
LIBS = $(SCALAPACK) $(LAPACK) $(BLAS)
