# for NEX SX-ACE compiler
FF             =  sxmpif90 -f0
FC             =  sxmpif90 -f0
CC             =  sxmpic++
AR             =  sxar
SMPFLAG        =  -Popenmp
CCFLAG         =  $(SMPFLAG) -Cvsafe -Ep
C0FLAG         =  $(SMPFLAG) -Ep
CPPFLAG        =  
MACRO_D_PREFIX =  -D
INCFLAG        =  -I./
MODFLAG        =  
BLAS           =  -lparblas
SCALAPACK      =  -lscalapack -lblacsF90init -lblacs -lblacsF90init -llapack
LDFLAG         =  $(SMPFLAG) $(SCALAPACK) $(BLAS) -lmpi
TEST_FLAG      =  -f2003
