# for Fujitsu BX900 compiler
FF             =  mpifrt -Fixed
FC             =  mpifrt -Fixed
CC             =  mpifcc
AR             =  ar
SMPFLAG        =  -KOMP
CCFLAG         =  $(SMPFLAG) -Kfast -Kocl -X9 -Am
CPPFLAG        =  -Cpp
MACRO_D_PREFIX =  -D
INCFLAG        =  -I./
MODFLAG        =  -M./
BLAS           =  -SSL2BLAMP
SCALAPACK      =  -SCALAPACK
LDFLAG         =  $(SMPFLAG) $(SCALAPACK) $(BLAS)
TESTFLAG       =
